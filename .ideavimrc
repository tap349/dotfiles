"===============================================================================
"
" Enable key repeat:
"
" defaults write com.jetbrains.intellij ApplePressAndHoldEnabled -bool false
"
"===============================================================================

"-------------------------------------------------------------------------------
" Search
"-------------------------------------------------------------------------------

set hlsearch
set incsearch

"-------------------------------------------------------------------------------
" <C-c>, <C-Backspace> and <C-g>
"-------------------------------------------------------------------------------

nnoremap <silent> <C-g> <C-g>:nohlsearch<Bar>:echo<CR>

inoremap <C-g> <Esc>
vnoremap <C-g> <Esc>

"-------------------------------------------------------------------------------
" Navigation
"-------------------------------------------------------------------------------

nnoremap H ^
nnoremap L g_

vnoremap H ^
vnoremap L g_

"-------------------------------------------------------------------------------
" Save
"-------------------------------------------------------------------------------

nnoremap <silent> <Tab> :w<CR>
